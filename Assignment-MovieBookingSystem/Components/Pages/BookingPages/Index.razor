@page "/bookings"
@using MovieBookingSystem.Models
@using MovieBookingSystem.Services
@inject BookingService BookingService
@implements IDisposable

<PageTitle>Movie Bookings</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Movie Bookings</h2>
                <a href="bookings/create" class="btn btn-primary btn-lg">Create New Booking</a>
            </div>

            @if (_bookings == null)
            {
                <div class="alert alert-info text-center" role="alert">
                    <em>Loading...</em>
                </div>
            }
            else if (_bookings.Count == 0)
            {
                <div class="alert alert-warning text-center" role="alert">
                    No bookings found. Create a new booking to get started!
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col">Movie Title</th>
                                        <th scope="col">Customer Name</th>
                                        <th scope="col">Showtime</th>
                                        <th scope="col">Seat Number</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in _bookings)
                                    {
                                        <tr>
                                            <td>@booking.MovieTitle</td>
                                            <td>@booking.CustomerName</td>
                                            <td>@booking.Showtime.ToString("g")</td>
                                            <td>@booking.SeatNumber</td>
                                            <td>
                                                <a href="@($"bookings/edit?id={booking.Id}")" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                                                <a href="@($"bookings/details?id={booking.Id}")" class="btn btn-sm btn-outline-info me-1">Details</a>
                                                <a href="@($"bookings/delete?id={booking.Id}")" class="btn btn-sm btn-outline-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .table th {
        font-weight: bold;
        color: #333;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-outline-secondary, .btn-outline-info, .btn-outline-danger {
        transition: background-color 0.2s ease-in-out;
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
        }

        .btn-outline-info:hover {
            background-color: #e7f1fa;
        }

        .btn-outline-danger:hover {
            background-color: #f8d7da;
        }
</style>


                        @code {
    private List<Booking>? _bookings;

    protected override void OnInitialized()
    {
        _bookings = BookingService.GetAllBookings().ToList();
    }

    public void Dispose()
    {
        // Cleanup if needed
    }
}