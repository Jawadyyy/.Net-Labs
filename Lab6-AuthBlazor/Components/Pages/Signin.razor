@page "/signin"
@rendermode InteractiveServer

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f5f5f5;
        padding: 20px;
    }

    .auth-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .auth-title {
        text-align: center;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .auth-instruction {
        text-align: center;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #555;
        font-weight: 500;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
    }

    .form-input:focus {
        outline: none;
        border-color: #4a90e2;
        box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.2);
    }

    .auth-button {
        width: 100%;
        padding: 0.75rem;
        background-color: #4a90e2;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .auth-button:hover {
        background-color: #3a7bc8;
    }

    .error-message {
        color: #e74c3c;
        margin-top: 1rem;
        padding: 0.5rem;
        background-color: #fdecea;
        border-radius: 4px;
        text-align: center;
    }

    .success-message {
        color: #2ecc71;
        margin-top: 1rem;
        padding: 0.5rem;
        background-color: #e8f8f0;
        border-radius: 4px;
        text-align: center;
    }

    .welcome-message {
        color: #333;
        text-align: center;
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 4px;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h3 class="auth-title">Sign In</h3>

        @if (!IsAuthenticated)
        {
                <p class="auth-instruction">Enter Username and Password To Sign In.</p>

                <div class="form-group">
                    <label for="username" class="form-label">Username:</label>
                    <input id="username" class="form-input" @bind="username" placeholder="Enter your username" />
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" class="form-input" @bind="password" placeholder="Enter your password" />
                </div>

                <button class="auth-button" @onclick="SignIn">Sign In</button>
        }
        else
        {

            @if(role == 0)
			{
						<p class="welcome-message">You are already signed in. Welcome to Owner Account, @username!</p>
			}
            else if (role == 1)
            {
                        <p class="welcome-message">You are already signed in. Welcome to Superadmin Account, @username!</p>
            }
			else if (role == 2)
			{
					    <p class="welcome-message">You are already signed in. Welcome to Admin Account, @username!</p>
			}
            else
            {
                        <p class="welcome-message">You are already signed in. Welcome to User Account, @username!</p>
            }
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
                <div class="error-message">@errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
                <div class="success-message">@successMessage</div>
        }
    </div>
</div>

@code {
    private bool IsAuthenticated;
    private string username;
    private string password;
    private string errorMessage;
    private string successMessage;
    private int role;

    private void SignIn()
    {
        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Please enter both username and password.";
            successMessage = null;
        }
        else if (username == "jawad" && password == "abc")
        {
            IsAuthenticated = true;
            successMessage = $"Welcome, {username}!";
            role = 0;
            errorMessage = null;
        }
        else if (username == "jawad" && password == "123")
        {
            IsAuthenticated = true;
            successMessage = $"Welcome, {username}!";
            role = 1;
            errorMessage = null;
        }
        else
        {
            errorMessage = "Invalid username or password.";
            successMessage = null;
        }
    }
}