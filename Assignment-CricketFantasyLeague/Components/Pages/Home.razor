<section class="registration py-5">
    <style>
        .registration {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .form-header {
            color: #1a365d;
            margin-bottom: 1.5rem;
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: -0.5px;
            line-height: 1.2;
            background: linear-gradient(to right, #1a365d, #2a5298);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-align: center;
            position: relative;
            padding-bottom: 15px;
        }

        .form-subheader {
            color: #4a5568;
            font-size: 1.1rem;
            margin-bottom: 2.5rem;
            font-weight: 400;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
            }

        .card-body {
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-control, .form-select {
            height: 48px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-size: 0.95rem;
            transition: all 0.3s;
            background-color: #f8fafc;
        }

            .form-control:focus, .form-select:focus {
                border-color: #4299e1;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.2);
                background-color: #fff;
            }

        .btn-primary {
            background: linear-gradient(135deg, #1a365d 0%, #2a5298 100%);
            border: none;
            border-radius: 8px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.95rem;
            box-shadow: 0 4px 12px rgba(26, 54, 93, 0.2);
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(26, 54, 93, 0.3);
                background: linear-gradient(135deg, #1a365d 0%, #2b4d8f 100%);
            }

        .invalid-feedback {
            font-size: 0.85rem;
            color: #e53e3e;
        }

        .form-control.is-invalid {
            border-color: #e53e3e;
            background-image: none;
        }

            .form-control.is-invalid:focus {
                box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.2);
            }

        .form-icon {
            position: relative;
        }

            .form-icon i {
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #a0aec0;
            }

        .card-body

        {
            padding: 1.5rem;
        }

        .form-header {
            font-size: 2rem;
        }

        }
    </style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="form-header">Registration Form</h2>
                <p class="form-subheader text-center">Join our exclusive community of cricket enthusiasts and stay updated with the latest news</p>

                <div class="card">
                    <div class="card-body">
                        <form class="needs-validation" novalidate>
                            <div class="row g-4">
                                <div class="col-md-12">
                                    <label for="name" class="form-label">Full Name</label>
                                    <div class="form-icon">
                                        <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        Please provide your full name.
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label for="email" class="form-label">Email Address</label>
                                    <div class="form-icon">
                                        <input type="email" class="form-control" id="email" placeholder="example@email.com" required>
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        Please provide a valid email address.
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <div class="form-icon">
                                        <input type="tel" class="form-control" id="phone" placeholder="123-456-7890"
                                               pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        Please provide a valid phone number (format: 123-456-7890).
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label for="player" class="form-label">Favorite Cricket Player</label>
                                    <div class="form-icon">
                                        <input type="text" class="form-control" id="player" placeholder="Virat Kohli, Steve Smith, etc." required>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        Please tell us your favorite player.
                                    </div>
                                </div>

                                <div class="col-12 mt-3">
                                    <button class="btn btn-primary w-100 py-3" type="submit">
                                        <i class="fas fa-user-plus me-2"></i> Join Now
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</section>

@*-----------------------------------------------------------Registration Form Section Is Done Here-----------------------------------------------------*@

